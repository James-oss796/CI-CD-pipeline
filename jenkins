pipeline {
    agent any
    
    stages {
        stage('Build') {
            steps {
                echo 'Building the application...'
                // Example for Java
                // sh 'javac src/Main.java -d build/'
                // Example for Node.js
                // sh 'npm install'
            }
        }

        stage('Test') {
            steps {
                echo 'Running tests...'
                // Example for Java JUnit
                // sh 'java -cp .:junit-4.12.jar org.junit.runner.JUnitCore MyTest'
                // Example for Node.js
                // sh 'npm test'
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying application...'
                // Example deployment
                // sh 'scp -r build/ user@server:/var/www/app'
                // or copy files locally
                // bat 'xcopy build\\* C:\\deploy\\app /s /i /y'
            }
        }
    }
    
    post {
        success {
            echo 'Pipeline completed successfully ✅'
        }
        failure {
            echo 'Pipeline failed ❌'
        }
    }
}
